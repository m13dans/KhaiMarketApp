<div>

    <div class="card shadow mb-4">
        @if (productInput == null)
        {
            <img class="card-img" height="100px" src="" alt="image of product" />
            <div class="card-body d-flex flex-column justify-content-between">

                <a href="#" class="card-title text-decoration-none">
                    <h6>Product Title : </h6>
                </a>
                <span class="card-subtitle card-title"> Rp. ??</span>
                <p class=" card-text text-start">Product Description</p>
                <div class="row">
                    <div class="btn btn-group-sm col-12 col-lg-6 d-flex justify-content-lg-start justify-content-center">
                        <button type="button" class="btn btn-outline-secondary me-1">
                            <i class="fa fa-shopping-cart"></i>
                        </button>
                        <a type="button" class="btn btn-sm btn-outline-secondary"> View </a>
                    </div>
                    <div class="col-12 col-lg-6 d-flex flex-column align-items-center align-items-lg-end">
                        <small class="text-body-secondary">? / ? </small>
                        <small class="text-body-secondary">? ratings</small>
                    </div>
                </div>
            </div>

        }
        else
        {
            <img class="" src="@productInput.ImageUrl" alt="@productInput.Name" />
            <div class="card-body d-flex flex-column justify-content-between">

                <a href="#" class="card-title text-decoration-none">
                    <h6>Product Title : @productInput.Name</h6>
                </a>
                <span class="card-subtitle card-title"> Rp. @productInput.Price</span>
                @if (productInput.Description.Length < 67)
                {
                    <p class=" card-text text-start">@productInput.Description</p>
                }
                else
                {
                    <p class="card-text text-start">
                        @productInput.Description.Substring(0, 66) + " ..."
                    </p>
                }
                <div class="row">
                    <div class="btn btn-group-sm col-12 col-lg-6 d-flex justify-content-lg-start justify-content-center">
                        <button (click)="incrementCart()" type="button" class="btn btn-outline-secondary me-1">
                            <i class="fa fa-shopping-cart"></i>
                        </button>
                        <a type="button" class="btn btn-sm btn-outline-secondary"> View </a>
                    </div>
                    <div class="col-12 col-lg-6 d-flex flex-column align-items-center align-items-lg-end">
                        <small class="text-body-secondary">@productInput.TotalStars / 5 </small>
                        <small class="text-body-secondary">
                            @productInput.ReviewsDTO!.Count() ratings</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {

    [Parameter]
    public ProductDTO? productInput { get; set; }
}